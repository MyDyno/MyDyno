<style>
.c-interaction {
	 /* background-color: #643cff; */
     background-color: black;
	 /* width: 250px; */
	 height: 60px;
	 /* border-radius: 100rem; */
	 display: flex;
	 align-items: center;
	 padding: 1rem;
	 overflow: hidden;
	 position: relative;
	 transform-origin: 0 0;
	 box-shadow: 1px 6px 20px 3px rgba(187, 153, 255, 0.4);
}
 .c-interaction__button {
	 border-radius: 100rem;
	 border: 0;
	 background: #8364ff;
	 min-width: 50px;
	 min-height: 45px;
	 display: inline-block;
	 margin: 0;
	 cursor: pointer;
	 position: relative;
}
 .c-interaction__button:after {
	 content: '';
	 width: 100%;
	 height: 100%;
	 top: 0;
	 left: 0;
	 transform: scale(0);
	 background: rgba(100, 75, 198, 0.5);
	 transition: 0.15s ease;
	 position: absolute;
	 border-radius: inherit;
}
 .c-interaction__button:hover svg {
	 transform: scale(0.9);
}
 .c-interaction__button:hover:after {
	 transform: scale(1);
}
 .c-interaction__button svg {
	 color: #fff;
	 z-index: 2;
	 position: relative;
	 transform: scale(1);
	 transition: 0.4s ease;
}
 .c-interaction__input {
	 transition: 0.6s ease;
	 background: #8364ff;
	 border: 0;
	 padding: 1rem;
	 border-radius: 100rem;
     height: 45px;
	 width: 100%;
	 margin-left: 1rem;
	 color: #fff;
	 font-size: 1rem;
	 letter-spacing: 1.3px;
	 transform: rotate(0deg);
	 transform-origin: -68px 0px;
}
 .c-interaction__input::placeholder {
	 color: #b9f;
}
 .c-interaction__menu {
	 position: absolute;
	 left: 73px;
	 transform: rotate(90deg);
	 transform-origin: -200px 10px;
	 transition: 0.4s ease;
}
 .c-interaction__menu ul {
	 margin: 0;
	 padding: 0;
	 display: flex;
}
 .c-interaction__menu li {
	 margin: 0 0.5rem;
	 list-style: none;
}
 .c-interaction__options input {
	 transition: 0.6s ease;
	 transform: rotate(-90deg);
}
 .c-interaction__options .c-interaction__menu {
	 transform: rotate(0);
	 transition: 0.4s ease;
}
 .vh {
	 position: absolute !important;
	 height: 1px;
	 width: 1px;
	 overflow: hidden;
	 clip: rect(1px 1px 1px 1px);
	/* IE6, IE7 */
	 clip: rect(1px, 1px, 1px, 1px);
}
.chat-list {
    padding: 0;
    font-size: .8rem;
}

.chat-list li {
    margin-bottom: 10px;
    overflow: auto;
    color: #ffffff;
}

.chat-list .chat-img {
    float: left;
    width: 48px;
}

.chat-list .chat-img img {
    -webkit-border-radius: 50px;
    -moz-border-radius: 50px;
    border-radius: 50px;
    width: 100%;
}

.chat-list .chat-message {
    -webkit-border-radius: 50px;
    -moz-border-radius: 50px;
    border-radius: 50px;
    background: #5a99ee;
    display: inline-block;
    padding: 10px 20px;
    position: relative;
}

.chat-list .chat-message:before {
    content: "";
    position: absolute;
    top: 15px;
    width: 0;
    height: 0;
}

.chat-list .chat-message h5 {
    margin: 0 0 5px 0;
    font-weight: 600;
    line-height: 100%;
    font-size: .9rem;
}

.chat-list .chat-message p {
    line-height: 18px;
    margin: 0;
    padding: 0;
}

.chat-list .chat-body {
    margin-left: 20px;
    float: left;
    width: 70%;
}

.chat-list .in .chat-message:before {
    left: -12px;
    border-bottom: 20px solid transparent;
    border-right: 20px solid #5a99ee;
}

.chat-list .out .chat-img {
    float: right;
}

.chat-list .out .chat-body {
    float: right;
    margin-right: 20px;
    text-align: right;
}

.chat-list .out .chat-message {
    background: #fc6d4c;
}

.chat-list .out .chat-message:before {
    right: -12px;
    border-bottom: 20px solid transparent;
    border-left: 20px solid #fc6d4c;
}

.card .card-header:first-child {
    -webkit-border-radius: 0.3rem 0.3rem 0 0;
    -moz-border-radius: 0.3rem 0.3rem 0 0;
    border-radius: 0.3rem 0.3rem 0 0;
}
.card .card-header {
    background: #17202b;
    border: 0;
    font-size: 1rem;
    padding: .65rem 1rem;
    position: relative;
    font-weight: 600;
    color: #ffffff;
}

.content{
    margin-top:40px;    
}

.scroll {
  margin:4px, 4px;
  padding:4px;
  height: 505px;
  overflow-x: hidden;
  overflow-y: auto;
  text-align: justify;
}
</style>

<script src="/socket.io/socket.io.js"></script>

