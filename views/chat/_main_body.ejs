<div class="container content">
    <div class="row">
        <div>

        	<div class="card">

        		<div class="card-header">
                    Chat
                    <div style="float: right;">
                        <label for="autoScrollCheckbox">Auto Scroll</label>
                        <input type="checkbox" id="autoScrollCheckbox" checked>
                    </div>
                </div>

        		<div class="card-body height3">
        			<ul class="chat-list">

                        <div id="messages" class="scroll">

                            <% message.forEach((message) => { %>

                                <% if(message.username == req.session.username){ %>

                                    <li class="out">
                                        <div class="chat-img">
                                            <img alt="Avtar" src="<%= message.icon %>">
                                        </div>
                                        <div class="chat-body">
                                            <div class="chat-message">
                                                <h5><%= message.username %></h5>
                                                <p><%= message.message %></p>
                                            </div>
                                        </div>
                                    </li>

                                <% }else{ %>

                                    <li class="in">
                                        <div class="chat-img">
                                            <img alt="Avtar" src="<%= message.icon %>">
                                        </div>
                                        <div class="chat-body">
                                            <div class="chat-message">
                                                <h5><%= message.username %></h5>
                                                <p><%= message.message %></p>
                                            </div>
                                        </div>
                                    </li>                                    

                                <% } %>

                            <% }) %>

                        </div>

        			</ul>
        		</div>

                <div>

                    <form id="formPost" class='c-interaction'>
                        
                        <% if(req.session.isAuth){ %>
                            <button type="button" aria-label="Toggle more options." class='c-interaction__toggle c-interaction__button'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><path d="M12 5v14M5 12h14"/></svg></button>
                            <label class='vh' for='message'>Message:</label>
                            <input required class='c-interaction__input' type='text' id='message' placeholder='Message' maxlength="2000">
                        <% } else{ %>
                            <button disabled type="button" aria-label="Toggle more options." class='c-interaction__toggle c-interaction__button'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><path d="M12 5v14M5 12h14"/></svg></button>
                            <label class='vh' for='message'>Message:</label>
                            <input disabled required class='c-interaction__input' type='text' id='message' placeholder='Login required!' maxlength="2000">
                        <% } %>   
                      
                        <div class='c-interaction__menu'>
                            <ul>
                                <li><button type="button" aria-label="Record a Video." class='c-interaction__button'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-video"><path d="M23 7l-7 5 7 5V7z"/><rect x="1" y="5" width="15" height="14" rx="2" ry="2"/></svg></button></li>
                                <li><button type="button" aria-label="Take a Picture." class='c-interaction__button'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-camera"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/><circle cx="12" cy="13" r="4"/></svg></button></li>
                                <li><button type="button" aria-label="Upload an Image." class='c-interaction__button'><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-image"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="M21 15l-5-5L5 21"/></svg></button></li>
                            </ul>
                        </div>

                    </form>

                </div>
                
        	</div>

        </div>
    </div>
</div>
