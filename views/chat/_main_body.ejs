<script>
const socket = io('<%= config.socket_url %>')
let messageContainer = document.getElementById('messages')
let inputBox = document.getElementById('message')
let form = document.getElementById('formPost')
let autoScrollCheckbox = document.getElementById('autoScrollCheckbox')
if(autoScrollCheckbox.checked == true){
    messageContainer.scrollTop = messageContainer.scrollHeight;
}

const interaction = document.querySelector('.c-interaction');
const toggleButton = document.querySelector('.c-interaction__toggle')

toggleButton.addEventListener('click',() => {
  interaction.classList.toggle('c-interaction__options')
})

form.addEventListener('submit', (e) => {
    e.preventDefault()

    let myMessage = 
    `
    <li class="out">
      <div class="chat-img">
        <img alt="Avtar" src="<%= req.session.icon %>">
      </div>
      <div class="chat-body">
        <div class="chat-message">
          <h5><%= req.session.username %></h5>
          <p>${inputBox.value}</p>
        </div>
      </div>
    </li>
    `
    appendElement(myMessage)
    let object = new Array('<%= req.session.icon %>', '<%= req.session.username %>', inputBox.value)
    socket.emit('sendMessage', object)
    if(autoScrollCheckbox.checked == true){
      messageContainer.scrollTop = messageContainer.scrollHeight;
    }
    inputBox.value = ''
})

socket.on('Message', (data) => {

    let messageClass;
    if( data[1] == '<%= req.session.username %>'){
      messageClass = 'out'
    }
    else{
      messageClass = 'in'
    }
    let message = 
    `
    <li class="${messageClass}">
      <div class="chat-img">
        <img alt="Avtar" src="${data[0]}">
      </div>
      <div class="chat-body">
        <div class="chat-message">
          <h5>${data[1]}</h5>
          <p>${data[2]}</p>
        </div>
      </div>
    </li>
    `
    appendElement(message)
    if(autoScrollCheckbox.checked == true){
        messageContainer.scrollTop = messageContainer.scrollHeight;
    }
})

function appendElement(message){
    const messageElement = document.createElement('div')
    messageElement.innerHTML = message
    messageContainer.append(messageElement)
}
</script>